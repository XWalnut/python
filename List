company_list = ['Alibaba', 'Baidu', 'Tencent', 'MeiTuan', 'JD']
# 增删改查
company_list.append('Huawei')
company_list.insert(0,'Xiaomi')

company_list.remove('Baidu')
company_list.pop()
del company_list[1]

company_list[1]='Apple'
# 查找索引
print(company_list.index('Tencent'))
#查找元素是否在列表中
if ele in list:
# 统计数量
list.count(element)
#index找不到则有异常，find找不到返回-1
list.index(ele)
list.find(ele)


#排序
company_list.sort(reverse=True)
# 将排序后的结果放入一个临时列表
sorted(company_list,reverse=True)

#反转
company_list.reverse()

#二维列表
friends = []
name = ['Niumei', 'YOLO', 'Niu Ke Le', 'Mona']
friends.append(name)
food = ['pizza', 'fish', 'potato', 'beef']
friends.append(food)

#列表切片
list[1:3]# 表示截取下标1到2的元素
list[::2]# 表示从下标0开始，以步长2来截取 [start:stop:step] 三个系数
list[::-1]#表示取逆序

# 列表元素拼接
friends = []
# 第一种方法
for i in friends:
  print(i,end='')#这里将friends中的元素全连接起来
# 第二种方法
print(''.join(friends))#将字符串，这里的friends中元素必须是字符
# 第三种方法
print(''.join(str(i) for i in friends))# 这里不限制元素类型

